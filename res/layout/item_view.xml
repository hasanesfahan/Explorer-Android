<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">
		<ImageView
		    android:id="@+id/item_view_Image_File"
		    android:paddingLeft="10dip"
		    android:layout_width="60dip"
		    android:layout_height="50dip" >
		</ImageView>

		<TextView
		    android:id="@+id/item_view_Text_Name"
		    android:paddingTop="10dip"
		    android:paddingLeft="10dip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:layout_toRightOf="@+id/item_view_Image_File"
		    android:singleLine="true"
		    android:text="@string/temp_file_name"
		    android:textStyle="bold" />

		<TextView
		    android:id="@+id/item_view_Text_Desc"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/item_view_Text_Name"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:gravity="right"
		    android:text="@string/temp_file_desc" />

</RelativeLayout>